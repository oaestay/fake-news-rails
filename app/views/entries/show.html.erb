<h1><%= @entry.title %></h1>
<h4><%= @entry.summary %></h4>
<p><%= @entry.body %></p>
<br>
<div>
  <%= form_for :comment_entry, url: entry_comments_path do |f| %>
  Name: <%= f.text_field :author %><br />
  <%= f.text_area :body %><br />
  <%= f.hidden_field :entry_id, :value => @entry.id %>
  <%= f.submit "Coment" %>
<% end %>
</div>
<% @entry.entry_comments.each do |comment| %>
<p><%= comment.author %>:</p>
<p><%= comment.body %></p>
<% end %>

<%= link_to "Back", root_path %>
