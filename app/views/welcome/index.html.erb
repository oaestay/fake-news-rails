<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Fake News</h1>
      <nav class="nav">
        <%= link_to "Admin", admin_dashboard_path, class: "nav-link" %>
        <%= link_to "All", entries_path, class: "nav-link" %>
      </nav>
      <hr>

      <% @last_news.each do |entry| %>
      <h2><%= link_to entry.title, entry_path(entry) %></h2>
      <p><%= link_to entry.summary.truncate(200), entry_path(entry) %></p>
      <p><%= link_to entry.body.truncate(500), entry_path(entry) %></p>
      <p><%= link_to "#{entry.entry_comments.count} comments.", entry_path(entry) %></p>
      <hr>
      <% end %>

    </div>
  </div>
</div>
